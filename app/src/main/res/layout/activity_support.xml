<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Support">

    <TextView
        android:id="@+id/support_welcome_textv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:text="@string/support_welcome_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topbar_support" />

    <TextView
        android:id="@+id/topbar_support"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:text="Medi-App Support"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/im_supportGP"
        android:layout_width="131dp"
        android:layout_height="138dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="@+id/support_welcome_textv"
        app:layout_constraintTop_toBottomOf="@+id/support_welcome_textv"
        app:srcCompat="@drawable/ic_call_gp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="131dp"
        android:layout_height="138dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="@+id/im_supportGP"
        app:layout_constraintStart_toStartOf="@+id/im_supportGP"
        app:layout_constraintTop_toBottomOf="@+id/im_supportGP"
        app:srcCompat="@drawable/ic_insurance_prov" />

    <Button
        android:id="@+id/cancelbuttonSupport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#03A9F4"
        android:text="@string/reviewbutton_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <Button
        android:id="@+id/SupportGPbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:backgroundTint="#03A9F4"
        android:text="Contact My GP"
        app:layout_constraintBottom_toBottomOf="@+id/im_supportGP"
        app:layout_constraintEnd_toEndOf="@+id/support_welcome_textv"
        app:layout_constraintStart_toEndOf="@+id/im_supportGP"
        app:layout_constraintTop_toTopOf="@+id/im_supportGP" />

    <Button
        android:id="@+id/SupportInsurancebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#03A9F4"
        android:text="Contact My \n Insurance Company"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/SupportGPbutton"
        app:layout_constraintStart_toStartOf="@+id/SupportGPbutton"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

</androidx.constraintlayout.widget.ConstraintLayout>