<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediCoin">

    <TextView
        android:id="@+id/topbar_medicoin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:text="Medi-Coin"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coin_welcome_tv"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="@string/coin_welcome_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topbar_medicoin" />

    <ImageView
        android:id="@+id/im_payGP"
        android:layout_width="70dp"
        android:layout_height="138dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toStartOf="@+id/appointment_time_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payInsurancebutton"
        app:srcCompat="@drawable/ic_call_gp" />

    <ImageView
        android:id="@+id/im_pay_insurance"
        android:layout_width="70dp"
        android:layout_height="138dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/month_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coin_welcome_tv"
        app:srcCompat="@drawable/ic_insurance_prov" />

    <Button
        android:id="@+id/cancelbuttonCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#03A9F4"
        android:text="@string/reviewbutton_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/im_payGP" />

    <Button
        android:id="@+id/payGPbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#03A9F4"
        android:text="Pay for appointment"
        app:layout_constraintBottom_toBottomOf="@+id/im_payGP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/im_payGP"
        app:layout_constraintTop_toBottomOf="@+id/gppricetv" />

    <Button
        android:id="@+id/payInsurancebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#03A9F4"
        android:text="Pay premium"
        app:layout_constraintBottom_toBottomOf="@+id/im_pay_insurance"
        app:layout_constraintEnd_toEndOf="@+id/month_tv"
        app:layout_constraintStart_toStartOf="@+id/month_tv" />

    <TextView
        android:id="@+id/month_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Balance for December"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/im_pay_insurance"
        app:layout_constraintTop_toTopOf="@+id/im_pay_insurance" />

    <TextView
        android:id="@+id/insurancecost_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="€59"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/payInsurancebutton"
        app:layout_constraintEnd_toEndOf="@+id/month_tv"
        app:layout_constraintStart_toStartOf="@+id/month_tv"
        app:layout_constraintTop_toBottomOf="@+id/month_tv" />

    <TextView
        android:id="@+id/appointment_time_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Apointment on 22/12/2021 at 14:00"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/month_tv"
        app:layout_constraintStart_toStartOf="@+id/month_tv"
        app:layout_constraintTop_toTopOf="@+id/im_payGP" />

    <TextView
        android:id="@+id/gppricetv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Total cost = €100"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/appointment_time_tv"
        app:layout_constraintStart_toStartOf="@+id/appointment_time_tv"
        app:layout_constraintTop_toBottomOf="@+id/appointment_time_tv" />

    <View
        android:id="@+id/divider9"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="34dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/im_payGP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/im_pay_insurance" />

    <View
        android:id="@+id/divider10"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="12dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/im_payGP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payGPbutton"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/divider11"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="17dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/im_pay_insurance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coin_welcome_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>